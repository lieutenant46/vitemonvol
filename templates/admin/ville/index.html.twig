{% extends 'admin/base.html.twig' %}

{% block title %}Liste des villesx{% endblock %}

{% block body %}
    <h1>Liste des villes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Pays</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ville in villes %}
            <tr>
                <td>{{ ville.id }}</td>
                <td>{{ ville.nom }}</td>
                <td>{{ ville.country.nom }}</td>
                <td>
                    <a href="{{ path('admin_ville_show', {'id': ville.id}) }}" class="btn btn-primary">Voir</a>
                    <a href="{{ path('admin_ville_edit', {'id': ville.id}) }}" class="btn btn-success">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_ville_new') }}" class="btn btn-primary text-center w-100">Nouvelle ville</a>
{% endblock %}
